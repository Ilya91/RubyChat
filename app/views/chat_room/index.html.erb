<h2 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  ChatRoom
</h2>

<div class="ui two column grid">
  <div class="four wide column">
    <div class="ui inverted vertical menu">
      <a class="active item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
  <div class="twelve wide column">
    <div class="ui small comments">
      <h3 class="ui dividing header">Messages</h3>
      <%= render @messages %>
      <%= form_for(@message, html: {class: 'ui reply form', role: 'form'}, url: message_path) do |f| %>
        <div class="field">
          <%= f.text_area :body, placeholder: 'Message' %>
        </div>
        <%= f.button 'Send', class: 'ui blue labeled submit icon button' %>
      <% end %>
    </div>

  </div>
  </div>