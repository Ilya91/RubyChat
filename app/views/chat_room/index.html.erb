<h2 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  ChatRoom
</h2>

<div class="ui two column grid">
  <div class="four wide column">
    <div class="ui inverted vertical menu">
      <a class="active item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
  <div class="twelve wide column">
    <div class="ui small comments">
      <h3 class="ui dividing header">Messages</h3>
      <div id="messages">
        <%= render @messages %>
      </div>
        <div class="field">
          <textarea name="" id="msg" cols="30" rows="10"></textarea>
        </div>
        <button id="send" class="ui blue labeled submit icon button">Send</button>
    </div>

  </div>
  </div>
<script>
    $(document).ready(function(){
        /* RECEIVE MESSAGE */
        App.chat.received = function(data)
        {
            var message = ''
            $("#messages").append("<div class='comment'><a class='avatar'><img src='/images/avatar/small/matt.jpg'> </a> <div class='content'> <a class='author'></a> <div class='metadata'> <span class='date'></span> </div> <div class='text'>" + data['message'] + " </div> <div class='actions'> <a class='reply'>Reply</a> </div> </div> </div>")
        }

        $("#send").click(function(){
            msg = $("#msg").val()

            /* SEND MESSAGE */
            App.chat.send_msg(msg)
        })
    })
</script>